%ul.thumbnails
  - @notebooks.each do |notebook|
    %li.span2
      %a.thumbnail{:href=> notebook_path(notebook)}
        %div= notebook.title
        %i{:class=>"icon-book-1", :style=>"font-size:120px"}

        
        
      - if can? :edit, Notebook
        %div= link_to 'Edit', edit_notebook_path(notebook)
        %div= link_to 'Destroy', notebook, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
- if can? :create, Notebook
  = link_to 'New Notebook', new_notebook_path


